        <div class="absolute inset-0 bg-blue-400/50 rounded-[40px] blur-xl -z-10 animate-pulse"></div>
  
        <div class="w-full flex items-center justify-center relative">
          {qualities.map((item, index) => (
            <div 
              class={`quality-card absolute flex flex-col justify-center items-center min-w-[360px] max-w-lg px-16 py-14 bg-blue-900/80 backdrop-blur-sm border border-gray-900/10 shadow-2xl rounded-3xl transition-all duration-700 ease-out opacity-0 translate-y-8 ${index === 0 ? 'opacity-100 translate-y-0 z-20' : 'z-10'}`}
              data-index={index}
            >
              <span class={`text-base font-black uppercase tracking-[0.2em] mb-4 ${item.color}`}>
                Our Expertise 0{index + 1}
              </span>
              <h2 class="text-5xl md:text-6xl font-bold text-blue-300 mb-6 text-center text-shadow-blue-950 text-shadow-xs">{item.title}</h2>
              <p class="text-xl text-gray-100 leading-relaxed text-center">{item.desc}</p>
              
              <!-- Progress Bar -->
              <div class="mt-12 h-3 w-4/5 bg-blue-200/60 rounded-full overflow-hidden shadow-inner">
                 <div class="progress-bar h-full bg-linear-to-r from-blue-200 to-blue-500 w-0 transition-all duration-300"></div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
<script>
    let currentIndex = 0;
    const cards = document.querySelectorAll('.quality-card');
    const total = cards.length;
  
    function rotateCards() {
      // Hide current card
      cards[currentIndex].classList.remove('opacity-100', 'translate-y-0', 'z-20');
      cards[currentIndex].classList.add('opacity-0', 'translate-y-8', 'z-10');
      
      // Move to next
      currentIndex = (currentIndex + 1) % total;
  
      // Show next card
      cards[currentIndex].classList.remove('opacity-0', 'translate-y-8', 'z-10');
      cards[currentIndex].classList.add('opacity-100', 'translate-y-0', 'z-20');
  
      // Reset and start progress bar
      resetProgressBar();
    }
  
    function resetProgressBar() {
      const bars = document.querySelectorAll('.progress-bar');
      bars.forEach(bar => (bar as HTMLElement).style.width = '0%');
      
      const activeBar = cards[currentIndex].querySelector('.progress-bar') as HTMLElement;
      activeBar.animate([
        { width: '0%' },
        { width: '100%' }
      ], { duration: 3000, iterations: 1 });
    }
  
    // Initialize
    resetProgressBar();
    setInterval(rotateCards, 3000);  

  
    // Start the effect
    // document.addEventListener('DOMContentLoaded');
  </script>

    <style>      
        @keyframes blink {
          from, to { border-color: transparent }
          50% { border-color: blue; } /* Tailwind indigo-600 */
        }
      </style>
