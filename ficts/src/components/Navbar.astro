---
// Define your navigation links here
const navLinks = [
  { name: "Home", href: "/" },
  { name: "About Us", href: "#about" },
  { name: "Services", href: "#services" },
  { name: "Testimonials", href: "#testimonials" },
  { name: "Our Clients", href: "#clients" },
  { name: "Contact", href: "#contact" },
];

import logo from "../assets/logo.png";
import { Image } from "astro:assets";
---

<nav
  class="fixed top-0 left-1/2 -translate-x-1/2 w-full z-50 bg-linear-b from-white/80 to-white/10 backdrop-blur-md border-b border-blue-900/10"
>
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center"
  >
    <div
      class="flex flex-col md:flex-row justify-center items-center h-20 w-full"
    >
      <!-- Logo -->
      <div class="shrink-0 mb-2 md:mb-0 md:mr-10 flex justify-center">
        <a
          href="/"
          class="md:text-4xl text-2xl font-semibold bg-linear-to-r from-blue-300 to-blue-900 bg-clip-text text-transparent text-shadow-blue-300 text-shadow-xs/20 flex items-center"
        >
          <Image
            src={logo}
            alt="Company Logo"
            class="h-20 w-20 md:h-30 md:w-30 mt-6"
          />
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-10 items-center justify-center">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class="text-md lg:text-lg font-bold uppercase text-blue-500 hover:text-blue-300 transition-colors duration-200 text-shadow-blue-800 text-shadow-xs"
            >
              {link.name}
            </a>
          ))
        }
        <a
          href="#contact"
          class="bg-blue-600 text-white px-6 py-2.5 rounded-full text-sm font-bold hover:bg-blue-700 hover:shadow-lg hover:shadow-blue-200 transition-all active:scale-95"
        >
          Get Started
        </a>
      </div>

      <!-- Mobile Button -->
      <div class="md:hidden flex fixed w-full mt-2 md:mt-0">
        <button id="menu-toggle" class="text-blue-600 p-2">
          <svg
            xmlns="http://www.w3.org"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu (Hidden by default) -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-white/50 backdrop-blur-md border-b border-gray-100 px-4 pt-2 pb-6 space-y-2 text-center relative"
  >
    <!-- Mobile menu close button-->
    <button
      id="menu-close"
      class="absolute right-4 top-2 text-blue-600 p-2 focus:outline-none"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    {
      navLinks.map((link) => (
        <a
          href={link.href}
          class="block py-3 text-base font-bold text-blue-600 uppercase text-shadow-2xs text-shadow-blue-900 shadow-lg shadow-blue-200 hover:text-blue-300 border-b border-blue-300 mobile-menu-link"
        >
          {link.name}
        </a>
      ))
    }
  </div>
</nav>

<script>
  // Simple "Hard-Coded" logic for mobile menu toggle
  const btn = document.getElementById("menu-toggle");
  const menu = document.getElementById("mobile-menu");
  const closeBtn = document.getElementById("menu-close");

  function hideMenu() {
    menu?.classList.add("hidden");
  }

  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });

  // Close button for mobile menu
  closeBtn?.addEventListener("click", hideMenu);

  // Hide menu after clicking a link (mobile only)
  // Use event delegation to cover dynamically rendered links
  menu?.addEventListener("click", function (e) {
    // Look for links only
    let el = e.target;
    while (el && el !== menu) {
      if (el.classList?.contains("mobile-menu-link")) {
        // Delay slightly to allow navigation for anchor links
        setTimeout(hideMenu, 100);
        break;
      }
      el = el.parentElement;
    }
  });

  const nav = document.getElementById("main-nav");
  const logo = document.getElementById("nav-logo");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 20) {
      // Modern Glassmorphism Look
      nav?.classList.add(
        "bg-white/70",
        "backdrop-blur-lg",
        "shadow-sm",
        "border-slate-200/50",
        "py-2",
      );
      nav?.classList.remove("border-transparent", "py-4");
    } else {
      // Transparent initial state
      nav?.classList.remove(
        "bg-white/70",
        "backdrop-blur-lg",
        "shadow-sm",
        "border-slate-200/50",
        "py-2",
      );
      nav?.classList.add("border-transparent", "py-4");
    }
  });
</script>
