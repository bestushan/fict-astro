---
// Define your navigation links here
const navLinks = [
  { name: "Home", href: "/" },
  { name: "About Us", href: "#about" },
  { name: "Services", href: "#services" },
  { name: "Testimonials", href: "#testimonials" },
  { name: "Our Clients", href: "#clients" },
  { name: "Contact", href: "#contact" },
];

import logo from "../assets/logo.png";
import { Image } from "astro:assets";
---

<nav
  class="fixed top-0 left-1/2 -translate-x-1/2 w-full z-50 bg-linear-b from-white/80 to-white/10 backdrop-blur-md border-b border-blue-900/10"
>
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center"
  >
    <div
      class="flex flex-col md:flex-row justify-center items-center h-20 w-full"
    >
      <!-- Logo -->
      <div class="shrink-0 mb-2 md:mb-0 md:mr-10 flex justify-center">
        <a
          href="/"
          class="md:text-4xl text-2xl font-bold bg-linear-to-r from-blue-300 to-blue-900 bg-clip-text text-transparent text-shadow-blue-950 text-shadow-xs/20 flex items-center"
        >
          <Image
            src={logo}
            alt="Company Logo"
            class="h-20 w-20 md:h-30 md:w-30 mt-6"
          />
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-10 items-center justify-center">
        {
          navLinks.map((link) => (
            <a
              href={link.href}
              class="text-md lg:text-lg font-semibold text-blue-500 hover:text-blue-300 transition-colors duration-200"
            >
              {link.name}
            </a>
          ))
        }
        <a
          href="#contact"
          class="bg-blue-600 text-white px-6 py-2.5 rounded-full text-sm font-bold hover:bg-blue-700 hover:shadow-lg hover:shadow-blue-200 transition-all active:scale-95"
        >
          Get Started
        </a>
      </div>

      <!-- Mobile Button -->
      <div class="md:hidden flex fixed w-full mt-2 md:mt-0">
        <button id="menu-toggle" class="text-blue-300 p-2">
          <svg
            xmlns="http://www.w3.org"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu (Hidden by default) -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-white border-b border-gray-100 px-4 pt-2 pb-6 space-y-2 text-center"
  >
    {
      navLinks.map((link) => (
        <a
          href={link.href}
          class="block py-3 text-base font-semibold text-blue-600 hover:text-blue border-b border-blue-300"
        >
          {link.name}
        </a>
      ))
    }
  </div>
</nav>

<script>
  // Simple "Hard-Coded" logic for mobile menu toggle
  const btn = document.getElementById("menu-toggle");
  const menu = document.getElementById("mobile-menu");

  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });

  const nav = document.getElementById("main-nav");
  const logo = document.getElementById("nav-logo");

  window.addEventListener("scroll", () => {
    if (window.scrollY > 20) {
      // Modern Glassmorphism Look
      nav?.classList.add(
        "bg-white/70",
        "backdrop-blur-lg",
        "shadow-sm",
        "border-slate-200/50",
        "py-2",
      );
      nav?.classList.remove("border-transparent", "py-4");
    } else {
      // Transparent initial state
      nav?.classList.remove(
        "bg-white/70",
        "backdrop-blur-lg",
        "shadow-sm",
        "border-slate-200/50",
        "py-2",
      );
      nav?.classList.add("border-transparent", "py-4");
    }
  });
</script>
