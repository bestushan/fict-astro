---
const currentYear = new Date().getFullYear();

const links = [
  {
    header: "Company",
    items: ["About Us", "Services", "Contact"],
  },
];

const socialLinks = [
  { name: "Facebook", url: "#", icon: "fa-facebook" },
  { name: "Twitter", url: "#", icon: "fa-twitter" },
  { name: "LinkedIn", url: "#", icon: "fa-linkedin" },
  { name: "Instagram", url: "#", icon: "fa-instagram" },
];

const CompanyLinks = [
  { name: "About Us", href: "#about" },
  { name: "Services", href: "#services" },
  { name: "Contact", href: "#contact" },
];

import logo from "../assets/logo.png";
import { Image } from "astro:assets";
---

<footer
  class="bg-radial-[at_50%_35%] from-sky-200 via-blue-400 to-blue-900 text-slate-300 pt-8 md:pt-16 pb-8 object-center"
>
  <div class="flex h-36 items-center justify-center">
    <Image src={logo} alt="Company Logo" class="h-20 w-20 md:h-30 md:w-30" />
  </div>
  <div class="flex flex-col items-center">
    <!-- Brand Column -->
    <div>
      <div>
        <a
          href="/"
          class="text-white text-2xl md:text-3xl font-extrabold tracking-tight block mb-1"
        >
          Future <span class="text-blue-600">ICT </span>Solutions PVT LTD.
        </a>
      </div>
    </div>
    <!-- Contact/Newsletter Column -->
    <div
      class="text-white text-md md:text-lg font-semibold tracking-tight block"
    >
      <p>+94 77 90 16 166</p>
    </div>

    <div>
      <a
        href="mailto:info@fictsolutions.com"
        class="text-white text-md md:text-lg font-semibold hover:underline"
      >
        info@fictsolutions.com
      </a>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div
    class="mt-3 border-t border-1/2 border-white-900/50 justify-between items-center text-xs text-center"
  >
    <p>&copy; {currentYear} FICT Solutions. All rights reserved.</p>
  </div>
</footer>
