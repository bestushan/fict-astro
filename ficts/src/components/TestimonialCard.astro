---
// src/components/TestimonialCard.astro
interface Props {
  name: string;
  role: string;
  company: string;
  content: string;
  image?: string;
}

const { name, role, company, content, image } = Astro.props;
---

<div
  class="shrink-0 w-[350px] md:w-[450px] p-8 rounded-[2.5rem] bg-white/40 backdrop-blur-xl border border-white/20 shadow-2xl shadow-slate-200/50 flex flex-col justify-between hover:scale-[1.02] transition-transform duration-500"
>
  <div>
    <!-- Modern Minimalist Quote Icon -->
    <svg
      width="40"
      height="40"
      viewBox="0 0 24 24"
      fill="none"
      class="text-blue-500/20 mb-6"
    >
      <path
        d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C20.1216 16 21.017 15.1046 21.017 14V9C21.017 7.89543 20.1216 7 19.017 7H15.017C13.9124 7 13.017 7.89543 13.017 9V15M10.017 21L10.017 18C10.017 16.8954 9.12157 16 8.017 16H5.017C3.91243 16 3.017 15.1046 3.017 14V9C3.017 7.89543 3.91243 7 5.017 7H9.017C10.1216 7 11.017 7.89543 11.017 9V15"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>

    <p class="text-slate-700 text-lg leading-relaxed font-medium">
      "{content}"
    </p>
  </div>

  <div class="mt-8 pt-6 border-t border-slate-200/50 flex items-center gap-4">
    <div
      class="w-12 h-12 rounded-2xl bg-linear-to-br from-blue-600 to-indigo-600 flex items-center justify-center text-white font-bold shadow-lg shadow-blue-200"
    >
      {
        image ? (
          <img
            src={image}
            alt={name}
            class="w-full h-full object-cover rounded-2xl"
          />
        ) : (
          name.charAt(0)
        )
      }
    </div>
    <div>
      <h4 class="font-bold text-slate-900">{name}</h4>
      <p class="text-xs text-blue-600 font-semibold uppercase tracking-wider">
        {role} @ {company}
      </p>
    </div>
  </div>
</div>
