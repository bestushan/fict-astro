---
import { Image } from "astro:assets";
const { title, category, image } = Astro.props;
---

<div class="group relative overflow-hidden rounded-2xl bg-gray-900">
  <!-- Image with Hover Scale Effect -->
  <div class="aspect-video overflow-hidden">
    <img
      src={image}
      alt={title}
      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110 opacity-80 group-hover:opacity-100"
    />
  </div>

  <!-- Overlay Content -->
  <div
    class="absolute inset-0 flex flex-col justify-end p-6 bg-linear-to-t from-black/80 via-black/20 to-transparent"
  >
    <p class="text-sm font-medium text-blue-400 mb-1">{category}</p>
    <h3 class="text-xl font-bold text-white">{title}</h3>

    <!-- Hidden Button that appears on hover -->
    <div
      class="mt-4 translate-y-8 opacity-0 transition-all duration-300 group-hover:translate-y-0 group-hover:opacity-100"
    >
      <span class="inline-flex items-center text-sm font-semibold text-white">
        View Case Study <span class="ml-2">â†’</span>
      </span>
    </div>
  </div>
</div>
