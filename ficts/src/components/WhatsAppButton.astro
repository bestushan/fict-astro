---
// You can pass your phone number as a prop or hardcode it
const {
  phoneNumber = "94779016166",
  message = "Hello Future ICT Solutions! I'm interested in your services.",
} = Astro.props;
const whatsappUrl = `https://wa.me{phoneNumber}?text=${encodeURIComponent(message)}`;
---

<a
  href={whatsappUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="fixed bottom-6 right-6 z-100 group flex items-center gap-3"
  aria-label="Contact us on WhatsApp"
>
  <!-- Tooltip that appears on hover -->
  <span
    class="bg-white text-slate-900 px-4 py-2 rounded-full shadow-xl text-sm font-bold opacity-0 group-hover:opacity-100 translate-x-4 group-hover:translate-x-0 transition-all duration-300 pointer-events-none border border-slate-100"
  >
    Chat with us
  </span>

  <!-- The Button -->
  <div class="relative">
    <!-- Pulse Effect -->
    <div
      class="absolute inset-0 bg-blue-500 rounded-full animate-ping opacity-20"
    >
    </div>

    <div
      class="relative bg-blue-500 text-white p-4 rounded-full shadow-2xl hover:scale-110 transition-transform duration-300 flex items-center justify-center"
    >
      <svg
        xmlns="http://www.w3.org"
        width="28"
        height="28"
        viewBox="0 0 24 24"
        fill="currentColor"
      >
        <path
          d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.417-.003 6.557-5.338 11.892-11.893 11.892-1.997-.001-3.951-.5-5.688-1.448l-6.305 1.652zm6.599-3.835c1.516.903 3.003 1.387 4.793 1.388 5.259 0 9.534-4.275 9.536-9.534.002-5.259-4.275-9.534-9.534-9.534-5.255 0-9.53 4.272-9.534 9.529-.001 1.848.497 3.395 1.44 4.893l-.997 3.642 3.73-.978zm11.567-7.362c-.316-.157-1.87-.923-2.159-1.028-.289-.105-.499-.157-.709.157-.21.314-.813 1.028-.996 1.238-.183.21-.367.236-.683.078-.317-.157-1.336-.492-2.545-1.57-.94-.838-1.575-1.873-1.758-2.188-.183-.315-.02-.485.137-.642.142-.141.316-.367.473-.551.157-.183.21-.314.316-.525.105-.21.052-.393-.026-.551-.079-.157-.709-1.706-.972-2.336-.256-.615-.517-.532-.709-.542-.183-.01-.393-.012-.603-.012s-.552.079-.841.393c-.289.315-1.103 1.076-1.103 2.622 0 1.547 1.129 3.045 1.286 3.256.157.21 2.222 3.391 5.385 4.758.752.325 1.339.518 1.796.663.754.24 1.44.206 1.982.125.604-.09 1.87-.765 2.133-1.47.262-.705.262-1.311.183-1.44-.079-.129-.289-.21-.605-.368z"
